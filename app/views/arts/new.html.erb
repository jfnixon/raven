<h2>Add a new Art limited edition</h2>

<%= form_for(@art) do |f| %>
  <% if @art.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@art.errors.count, "error") %> prohibited this art from being saved:</h2>

      <ul>
      <% @art.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :yubikey %>(optional)<br />
    <%= f.text_area :yubikey %>
  </div>

  <h3>Create the limited edition description</h3>
  <div class="book">
    <%= f.fields_for(:book) do |b| %>
      <div class="field">
        <%= f.label :title %><br />
        <%= f.text_field :title %>
      </div>
      <div class="field">
        <%= f.label :author %><br />
        <%= f.text_area :author %>
      </div>
      <div class="field">
        <%= f.label :image %><br />
        <%= f.text_area :image %>
      </div>
    <% end %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

