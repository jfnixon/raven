<table class="table table-striped table-condensed">
  <% if booklist.empty? %>
    <h3>No books found</h3>
  <% else %>
    <thead>
      <tr>
        <th>Title</th>
        <th>Author</th>
        <th>Image</th>
        <th>Description</th>
        <th>Limited to</th>
        <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% booklist.each do |book| %>
        <tr>
          <td><%= book.title %></td>
          <td><%= book.author %></td>
          <td><%= book.image %></td>
          <td><%= book.edition_desc %></td>
          <td><% if yubi_valid %><span class="label label-info">validated</span> <% end %><%= book.edition_size %></td>
          <div class="btn-group">
            <td><%= link_to 'Show', book, :class => "btn" %></td>
            <td><%= link_to 'Edit', edit_book_path(book), :class => "btn" %></td>
            <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger" %></td>
          </div>
        </tr>
      <% end %>
    </tbody>
  <% end %>
</table>